    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/nav_color"
        android:id="@+id/navLayout"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_message_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="消息"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
            android:drawablePadding="-5dp"
            android:paddingLeft="5dp"
            android:onClick="ButtonClick"
            />
        
        <TextView
            android:id="@+id/messageView"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/message_count_size"
            android:minWidth="15dp"
            android:background="@drawable/message_label"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:paddingTop="-3dp"
            android:visibility="invisible"
            />
        
        <TextView 
            android:id="@+id/titleBarView"
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:text="最实用的群管家"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_title_size"
            />
        
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/xindicator"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@+id/titleBarView"
            android:layout_marginLeft="8dp"
            android:visibility="invisible"
            android:background="@drawable/round_1"/>
        
    </RelativeLayout>
    
