<?xml version="1.0" encoding="utf-8"?>
<widget.ResizeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/resizeLayout"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@color/nav_color"
        >
        <Button
            android:id="@+id/leftBarButton"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_back_normal"
            android:background="@null"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:drawablePadding="-20dp"
            android:paddingLeft="12dp"
            android:onClick="ButtonClick"
            />
        
        <TextView 
            android:id="@+id/titleBarView"
            android:layout_width="wrap_content"
      		android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
        
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/xindicator"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_toRightOf="@+id/titleBarView"
            android:layout_marginLeft="8dp"
            android:visibility="invisible"
            android:background="@drawable/round_1"/>
        <Button
            android:id="@+id/rightBarButton"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:drawableLeft="@drawable/btn_add_normal"
            android:layout_centerVertical="true"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/navbar_button_text_size"
           	android:layout_alignParentRight="true"
			android:paddingRight="12dp"
			android:drawablePadding="8dp"
			android:onClick="ButtonClick"
			android:background="@color/wechat_color"
			android:layout_margin="5dp"
            android:paddingLeft="8dp"/>
    </RelativeLayout>
    
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:fadingEdge="none"
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="@dimen/cell_subtitle_size" />

            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
		        android:layout_width="match_parent"
		        android:layout_height="36dp"
		        android:textSize="@dimen/cell_title_size"
		        android:textColor="@color/black"
		        android:singleLine="true"
		        android:inputType="text"
      		    android:gravity="center_vertical|left"
		        android:hint="标题"
		        android:maxLines="1"
		        android:lines="1"
		        android:imeOptions="actionNext"
		        android:id="@+id/activityName"
		        android:background="@drawable/edittext_frame"
		        android:paddingLeft="5dp"
		        android:drawablePadding="4dp"
	        	>
	    	</EditText>
	    	
            <TextView 
                android:layout_width="match_parent"
		        android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/cell_subtitle_size"
                android:textColor="@color/black"
                android:text="内容"
	            />
	        <EditText
		        android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
		        android:id="@+id/richEditText"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="textMultiLine"
		        android:textSize="@dimen/cell_title_size"
		        android:textColor="@color/black"
		        android:minLines="5"
		        android:background="@drawable/edittext_frame"
		        android:gravity="left|top"
		        android:paddingLeft="5dp"
		        android:paddingTop="5dp"
		        android:paddingRight="5dp"
		        android:paddingBottom="5dp"
		        android:hint="文章内容"
                android:cursorVisible="true"
	       		>
	    	</EditText>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="33dp"
		        android:orientation="horizontal"
		        android:background="@drawable/create_more"
		        android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-8dp"
		        >
		        <Button 
		            android:layout_marginLeft="5dp"
			        android:id="@+id/cameraButton"
			        android:layout_below="@+id/menuView"
			        android:layout_width="32dp"
			        android:layout_height="25dp"
			        android:background="@drawable/photo_tag"
			        android:onClick="ButtonClick"
			        android:layout_gravity="center_vertical"
	       	 		/>
		    </LinearLayout>
		    
        </LinearLayout>
        
    </ScrollView>
</widget.ResizeLinearLayout>
